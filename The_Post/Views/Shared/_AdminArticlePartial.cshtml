@model The_Post.Models.Article

<div class="p-2 col-md-4">
    <div class="card mt-1 mb-3">   
        <div class="position-relative"> @* This div is for stretched-link focusing, so it only targets the Image and card-body *@
            <a asp-action="ViewArticle" asp-controller="Article" asp-route-articleID="@Model.Id" class="stretched-link"></a>
            <div class="ratio ratio-4x3 img-thumbnail">
                <img src="@Model.ImageLink" class="card-img-top" alt="No Article Image">
            </div>
            <div class="card-body" style="height:100px;">
                <h5 class="card-title">@Model.HeadLine</h5>
                
            </div>
        </div>
       
        <div class="card-footer p-0 hstack gap-2">
            <div class="form-check m-2">
                <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                <label class="form-check-label small" for="flexCheckDefault">
                    Archived
                </label>
            </div>
            <div class="vr"></div>
            <div class="form-check form-switch m-2">
                <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
                <label class="form-check-label small" for="flexSwitchCheckDefault">Editor's Choice</label>
            </div>
            <div class="vr"></div>
            <div class="p-2 ms-auto">
                <a asp-controller="Article" asp-action="EditArticle" asp-route-articleID="@Model.Id" class="btn btn-sm btn-outline-warning">Edit</a>
            </div>
            <div class="vr"></div>
            <div class="p-2">
                <form asp-controller="Article" asp-action="DeleteArticle" asp-route-articleID="@Model.Id" method="post" style="display:inline;">
                    <button type="submit" class="btn btn-sm btn-outline-danger"
                            onclick="return confirm('Are you sure you want to delete this Article?')">
                        Delete
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

