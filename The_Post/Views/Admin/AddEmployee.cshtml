@model The_Post.Models.VM.AddEmployeeVM

@{
    ViewData["Title"] = "AddEmployee";
}


<div class="row justify-content-center">
    <div class="col-md-4 col-12">
        <h1 class=" text-center"><em><strong>Register New Employee</strong></em></h1>
        <form asp-action="AddEmployee" method="post">
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="FirstName" class="form-control" aria-required="true" placeholder="Please enter your first name" />
                <label asp-for="FirstName" class="control-label">First Name</label>
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="LastName" class="form-control" aria-required="true" placeholder="Please enter your last name" />
                <label asp-for="LastName" class="control-label">Last Name</label>
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="DOB" class="form-control" aria-required="true" type="date" placeholder="Please enter your date of birth" />
                <label asp-for="DOB" class="control-label">Date Of Birth</label>
                <span asp-validation-for="DOB" class="text-danger"></span>
            </div>            
            <div class="form-floating mb-3">
                <input asp-for="Address" class="form-control" aria-required="true" placeholder="Please enter your Address" />
                <label asp-for="Address" class="control-label">Address</label>
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Zip" class="form-control" aria-required="true" placeholder="Please enter your Zip Code" />
                <label asp-for="Zip" class="control-label">Zip</label>
                <span asp-validation-for="Zip" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="City" class="form-control" aria-required="true" placeholder="Please enter your City" />
                <label asp-for="City" class="control-label">City</label>
                <span asp-validation-for="City" class="text-danger"></span>
            </div>            
            <div class="form-floating mb-3">
                <input asp-for="PhoneNumber" class="form-control" aria-required="true" placeholder="Please enter your phone number." />
                <label asp-for="PhoneNumber" class="control-label">Phone Number</label>
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Email" class="form-control" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Email" class="control-label">Email</label>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Password" class="form-control" aria-required="true" placeholder="password" />
                <label asp-for="Password" class="control-label">Password</label>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="ConfirmPassword" class="form-control" aria-required="true" placeholder="password" />
                <label asp-for="ConfirmPassword" class="control-label">Confirm Password</label>
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

