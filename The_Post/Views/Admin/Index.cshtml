
@{
    ViewData["Title"] = "Index";
    Layout = "_LayoutForAdmin";
}


    <h1 class="text-center"><em><strong>Admin Page</strong></em></h1>
    <hr />
    <div class="d-grid gap-2 col-md-6 mx-auto">
    @if (User.Identity.IsAuthenticated && !User.IsInRole("Member"))
    {
        <a asp-action="AddArticle" asp-controller="Article" class="m-2 btn btn-outline-secondary rounded-4">Add Article</a>
        <a asp-action="Index" asp-controller="Article" class="m-2 btn btn-outline-secondary rounded-4">View Articles</a>
        @if (User.IsInRole("Admin"))
        {
            <a asp-action="AllEmployees" class="m-2 btn btn-outline-secondary rounded-4">View Employees</a>
            <a asp-action="Index" asp-controller="Roles" class="m-2 btn btn-outline-secondary rounded-4">Roles Management</a>
        }
    }
   
    </div>



