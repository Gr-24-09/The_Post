@model The_Post.Models.VM.ArticleQueriesVM

@{
    ViewData["Title"] = "Index";
}
@if (!(ViewBag.IsCookiesAccepted ?? false))
{
    <div id="cookie-notice" class="toast show position-fixed bottom-0 end-0 m-3" role="alert" aria-live="assertive" aria-atomic="true">
        <div class="toast-header">
            <strong class="me-auto">Cookie Notice</strong>
            <button type="button" class="btn-close" id="ignore-cookies-btn-header" aria-label="Ignore"></button>
        </div>
        <div class="toast-body">
            <p class="mb-2">
                This website uses cookies to ensure you get the best experience.
                <a href="/privacy-policy">Learn more</a>
            </p>
            <div class="d-flex justify-content-end gap-2">
                <button class="btn btn-primary btn-sm" id="accept-cookies-btn">Accept</button>
                <button class="btn btn-secondary btn-sm" id="ignore-cookies-btn">Ignore</button>
            </div>
        </div>
    </div>
}
<div class="container-fluid">
    <div class="row">
        <!-- Editors Choice - Left Sidebar -->
        <div class="col-lg-2 order-3 order-lg-1">
            <div class="sticky-top" style="top: 2rem;">
                <h3 class="border-bottom pb-2 mb-4">Editor's Choice</h3>
                <div class="scrollable-sidebar-content">
                    @foreach (var article in Model.GetEditorsChoiceArticles)
                    {
                        <div class="card fpCard mt-1 mb-3">
                            <img src="@article.ImageLink" class="card-img-top" alt="@article.HeadLine">
                            <div class="card-body">
                                <h5 class="card-title">@article.HeadLine</h5>
                                <p class="card-text small">@article.LinkText</p>
                                <a asp-action="ViewArticle" asp-controller="Article" asp-route-articleID="@article.Id" class="btn btn-outline-primary btn-sm">Read More</a>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Latest Articles - Main Content -->
        <main class="col-lg-8 order-1 order-lg-2">
            <h1 class="border-bottom pb-2 mb-4">Latest News</h1>
            @foreach (var article in Model.TenLatestArticles)
            {
                <partial name="_ArticleListingPartial" model="article" />
            }
        </main>

        <!-- Most Popular - Right Sidebar -->
        <div class="col-lg-2 order-2 order-lg-3">
            <div class="sticky-top" style="top: 2rem;">
                <h3 class="border-bottom pb-2 mb-4">Most Popular</h3>
                <div class="scrollable-sidebar-content">
                    @foreach (var article in Model.GetFiveMostPopularArticles)
                    {
                        <div class="card fpCard mt-1 mb-3">
                            <div class="card-body">
                                <h5 class="card-title">@article.HeadLine</h5>
                                <p class="card-text small"><em>@article.LinkText</em></p>
                                <a asp-action="ViewArticle" asp-controller="Article" asp-route-articleID="@article.Id" class="stretched-link"></a>
                                <p class="card-footer small mb-0 pt-1 pb-1 text-body-secondary">
                                    <i class="fas fa-eye"></i> @article.Views Views
                                </p>

                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        if (document.cookie.includes("cookiesConsent=true")) {
            document.getElementById('cookie-notice').style.display = 'none';
        }

        // Handle Accept
        document.getElementById('accept-cookies-btn').onclick = async function () {
            try {
                let response = await fetch('/Home/AcceptCookies', { method: 'POST' });
                if (response.ok) {
                    document.getElementById('cookie-notice').style.display = 'none';
                } else {
                    console.error("Failed to accept cookies");
                }
            } catch (error) {
                console.error("Network error:", error);
            }
        };

        // Handle both Ignore buttons
        const ignoreButtons = ['ignore-cookies-btn', 'ignore-cookies-btn-header'];
        ignoreButtons.forEach(id => {
            const button = document.getElementById(id);
            if (button) {
                button.onclick = function () {
                    document.getElementById('cookie-notice').style.display = 'none';
                };
            }
        });
    });
</script>